@model IEnumerable<Movie>


@{
    ViewData["Title"] = "List of Movies";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    Movie Name
          
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">Description Sample</p>
                            <p class="card-text"><b>Cinema: </b> Name Sample</p>
                            <p class="card-text"><b>Category: </b>Name Sample</p>
                            <p class="card-text"><b>Start Date: <b/>Name Sample</p>
                            <p class="card-text"><b>End Date: </b>Name Sample</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i> Show Details</a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Add to Cart (Price )</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

